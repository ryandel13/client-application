<UserControl x:Class="MasterThesis.WindowComponents.MainFooter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterThesis.WindowComponents"
             mc:Ignorable="d" 
             d:DesignHeight="50" Width="800">
    <Grid Width="1024" Height="50" HorizontalAlignment="Center">
        <local:FooterMenuItem x:Name="VolUpBtn" BackGroundImage="volume_up"  ItemTitle="+" Margin="0,0,640,0"></local:FooterMenuItem>
        <local:FooterMenuItem x:Name="VolDownBtn" BackGroundImage="volume_down" ItemTitle="-" Margin="160,0,480,0"></local:FooterMenuItem>
        <local:FooterMenuItem x:Name="MuteBtn" BackGroundImage="volume_mute" ItemTitle="Mute" Margin="320,0"></local:FooterMenuItem>
        <local:FooterMenuItem x:Name="PlayBtn" BackGroundImage="media_play_pause_resume" ItemTitle="Play" Margin="480,0,160,0" MouseUp="PlayBtn_MouseUp"></local:FooterMenuItem>
        <local:FooterMenuItem x:Name="NextBtn" BackGroundImage="media_next" ItemTitle="Next" Margin="640,0,0,0" MouseUp="NextBtn_MouseUp"></local:FooterMenuItem>
    </Grid>
</UserControl>
