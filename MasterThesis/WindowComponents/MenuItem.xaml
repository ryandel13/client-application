<UserControl x:Class="MasterThesis.WindowComponents.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterThesis.WindowComponents"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Grid Width="150" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Margin="0,0" Height="60" Name="Grid">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="ITEM" Name="Title" Foreground="White"/>
        <Image Name="Icon" HorizontalAlignment="Right" Height="40" Margin="0,10,55,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.794,0.511" />
    </Grid>
</UserControl>
