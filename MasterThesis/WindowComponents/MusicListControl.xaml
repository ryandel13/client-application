<UserControl x:Class="MasterThesis.WindowComponents.MusicListControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterThesis.WindowComponents"
      mc:Ignorable="d" 
      d:DesignHeight="75" d:DesignWidth="1110">

    <Grid Background="#FF444444" Margin="0,5,0,0">
        <Image Name="Icon" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="70" OpacityMask="White"/>
        <Label Name="Author" Content="Autor" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Name="Title" Content="Title" HorizontalAlignment="Left" Margin="80,41,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Name="Duration" Content="00:00" Margin="0,23,10,21" Foreground="White" HorizontalAlignment="Right" Width="80"/>

    </Grid>
</UserControl>
